<?xml version="1.0" encoding="utf-8"?>
<Project>
  <PropertyGroup>
    <TargetName>Microsoft.NET.Sdk.Maui.Workload</TargetName>
  </PropertyGroup>
  <ItemGroup>
    <!-- Shorten package names to avoid long path caching issues in Visual Studio -->
    <ShortNames Include="microsoft.aspnetcore.components.webview.maui;Microsoft.AspNetCore.Components.WebView.Maui">
      <Replacement>AspWV.Maui</Replacement>
    </ShortNames>

    <ShortNames Include="microsoft.maui.core.runtime;Microsoft.Maui.Core.Runtime">
      <Replacement>MMCore.RT</Replacement>
    </ShortNames>

    <ShortNames Include="microsoft.maui.controls.ref;Microsoft.Maui.Controls.Ref">
      <Replacement>MMCtrls.Ref</Replacement>
    </ShortNames>

    <ShortNames Include="microsoft.maui.controls.runtime;Microsoft.Maui.Controls.Runtime">
      <Replacement>MMCtrls.RT</Replacement>
    </ShortNames>

    <ShortNames Include="microsoft.maui.essentials.ref;Microsoft.Maui.Essentials.Ref">
      <Replacement>MMEss.Ref</Replacement>
    </ShortNames>

    <ShortNames Include="microsoft.maui.essentials.runtime;Microsoft.Maui.Essentials.Runtime">
      <Replacement>MMEss.RT</Replacement>
    </ShortNames>

    <ComponentResources Include="maui" Category=".NET" Title=".NET MAUI workload" Description=".NET MAUI SDK for all platforms"/>
    <ComponentVersions Include="maui" Version="@VERSION@" />

    <ComponentResources Include="maui-mobile" Category=".NET" Title=".NET MAUI mobile workload" Description=".NET MAUI SDK for Mobile"/>
    <ComponentVersions Include="maui-mobile" Version="@VERSION@" />

    <ComponentResources Include="maui-desktop" Category=".NET" Title=".NET MAUI desktop workload" Description=".NET MAUI SDK for Desktop"/>
    <ComponentVersions Include="maui-deskotp" Version="@VERSION@" />

    <ComponentResources Include="maui-core" Category=".NET" Title=".NET MAUI core workload" Description=".NET MAUI SDK Core Packages"/>
    <ComponentVersions Include="maui-core" Version="@VERSION@" />

    <ComponentResources Include="maui-android" Category=".NET" Title=".NET MAUI android workload" Description=".NET MAUI SDK for Android"/>
    <ComponentVersions Include="maui-android" Version="@VERSION@" />

    <ComponentResources Include="maui-maccatalyst" Category=".NET" Title=".NET MAUI mac catalyst workload" Description=".NET MAUI SDK for Mac Catalyst"/>
    <ComponentVersions Include="maui-maccatalyst" Version="@VERSION@" />

    <ComponentResources Include="maui-ios" Category=".NET" Title=".NET MAUI iOS workload" Description=".NET MAUI SDK for iOS"/>
    <ComponentVersions Include="maui-ios" Version="@VERSION@" />

    <ComponentResources Include="maui-windows" Category=".NET" Title=".NET MAUI windows workload" Description=".NET MAUI SDK for Windows"/>
    <ComponentVersions Include="maui-windows" Version="@VERSION@" />
  </ItemGroup>
</Project>
