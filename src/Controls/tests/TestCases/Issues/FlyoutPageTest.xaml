<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Maui.Controls.Sample.Issues.FlyoutPageTest">
  <FlyoutPage.Flyout>
    <ContentPage Title="The FlyOut">
      <Label Text="This is the flyout" />
    </ContentPage>
  </FlyoutPage.Flyout>
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <ContentPage Title="The Detail">
          <StackLayout>
            <Label Text="This is the detail" />
            <Button Text="Toggle the Flyout" AutomationId="ToggleFlyout" Clicked="ToggleFlyout_Clicked" />
          </StackLayout>
        </ContentPage>
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>
</FlyoutPage>