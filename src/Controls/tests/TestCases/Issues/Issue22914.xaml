<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue22914">
    <VerticalStackLayout BackgroundColor="Orange"
                         x:Name="VerticalStackLayout1">


        <ContentView BackgroundColor="Gray"
                     x:Name="ContentView1">
            <Label Text="You should be able to read after tapping the button"
                   TextColor="Gray"/>
        </ContentView>

        <Label HeightRequest="100"
               Background="Green"
               Text="Sample label"
               x:Name="Label1"/>

        <Button AutomationId="Tap1Button"
                BackgroundColor="Red"
                x:Name="Tap1Button"/>

    </VerticalStackLayout>
</ContentPage>