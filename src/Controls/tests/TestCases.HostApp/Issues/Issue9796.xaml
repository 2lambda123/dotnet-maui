<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue9796">
    <ContentPage.Content>
    <VerticalStackLayout Spacing="10" AutomationId="Stack" Margin="5">
      <Editor AutomationId="EditorControl" x:Name="Editor"
                Placeholder="Enter your note" 
                HeightRequest="100" Completed="Editor_Completed" />
      <Label x:Name="EditorStatusLabel"  TextColor="Green" AutomationId="EditorStatusLabel"/>
      <Entry AutomationId="EntryControl" x:Name="Entry" Completed="Entry_Completed" HeightRequest="100"/>
      <Label x:Name="EntryStatusLabel" TextColor="Green" AutomationId="EntryStatusLabel"/>
    </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>