  </ItemGroup>
	<PropertyGroup>
    <GitInfoReportImportance>high</GitInfoReportImportance>
  </PropertyGroup>
  <Target Name="Net6WinUIWorkaround" BeforeTargets="_GetSdkToolsPathsFromSdk" Condition="$(TargetFramework.Contains('-windows')) == true ">
