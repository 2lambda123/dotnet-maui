<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue20631">
    <Grid RowDefinitions="Auto,*,Auto">
        <Label Text="Content before" AutomationId="IssueContentBefore" FontSize="Large" BackgroundColor="Aquamarine" Grid.Row="0" />
        <Editor x:Name="Editor" AutomationId="IssueEditor" FontSize="Large" BackgroundColor="Orange" Grid.Row="1" />
        <Label Text="Content after" AutomationId="IssueContentAfter" FontSize="Large" BackgroundColor="Aquamarine" Grid.Row="2" />
    </Grid>
</ContentPage>