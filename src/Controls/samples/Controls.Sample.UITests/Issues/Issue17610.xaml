<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue17610"
             Title="Refresh View"
             Padding="0,100,0,0">
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto">
            <RefreshView x:Name="refreshView">
                <ScrollView>
                    <VerticalStackLayout x:Name="vsl">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Label Text="{Binding Text}" AutomationId="{Binding AutomationId}" />
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </VerticalStackLayout>
                </ScrollView>
            </RefreshView>
            <Button AutomationId="RefreshButton" Grid.Row="1" Text="Refresh" Clicked="Button_Clicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage>