<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Issues.Issue22417"
    xmlns:ns="clr-namespace:Maui.Controls.Sample.Issues">
  <Grid x:Name="contentGrid">
    <Grid.RowDefinitions>
      <RowDefinition Height="20" />
      <RowDefinition Height="220" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.Resources>
      
      <DataTemplate x:Key="SampleItemTemplate">
        <VerticalStackLayout 
          Spacing="4">
          <Label 
            Text="{Binding Title, Mode=OneWay}" 
            FontAttributes="Bold" />
          <Label 
            Text="{Binding Description, Mode=OneWay}" />
        </VerticalStackLayout>
      </DataTemplate>
      
    </Grid.Resources>
    <Label 
      HorizontalOptions="Center" 
      x:Name="WaitHere" 
      Text="Check if the added items to the Carousel show up" 
      AutomationId="WaitHere" 
      Background="Red"/>
    <CarouselView 
      x:Name="TestCarousel"
      ItemTemplate="{StaticResource SampleItemTemplate}"
      ItemsSource="{Binding Items}"
      Loop="False"
      HeightRequest="220"
      Grid.Row="1"
      BackgroundColor="LightBlue" />
    <Button 
      Grid.Row="2"
      AutomationId="AddButton"
      Text="Add"
      Clicked="OnAddButtonClicked"/>
  </Grid>
</ContentPage>