<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue20801"
             Title="Issue20801">
        <VerticalStackLayout
            Spacing="25">

            <ImageButton
                Source="dotnet_bot.png"
                BorderWidth="8"
                BorderColor="Blue"
                CornerRadius="12"
                BackgroundColor="White"
                HorizontalOptions="Center"
                HeightRequest="150"
                WidthRequest="200"
                Aspect="AspectFit"
                AutomationId="imageButton"/>

            <ImageButton
                Source="dotnet_bot.png"
                BorderWidth="10"
                BorderColor="Green"
                CornerRadius="50"
                BackgroundColor="White"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="200"
                Aspect="AspectFit" />

            <ImageButton
                Source="dotnet_bot.png"
                BorderWidth="12"
                BorderColor="Red"
                CornerRadius="0"
                BackgroundColor="White"
                HorizontalOptions="Center"
                HeightRequest="150"
                WidthRequest="200"
                Aspect="AspectFit" />
        </VerticalStackLayout>
</ContentPage>