<maui:MauiWinUIApplication
    x:Class="Maui.Controls.Sample.Platform.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    RequestedTheme="Light"
    xmlns:local="using:Maui.Controls.Sample.Platform">
  <maui:MauiWinUIApplication.Resources>
    <Style x:Key="MauiFlyoutPresenterStyle" TargetType="FlyoutPresenter">
      <Setter Property="AutomationProperties.Name" Value="WaitForActionSheet" />
      <Setter Property="MaxHeight" Value="250"/>
      <Setter Property="MaxWidth" Value="300"/>
    </Style>
  </maui:MauiWinUIApplication.Resources>

</maui:MauiWinUIApplication>
