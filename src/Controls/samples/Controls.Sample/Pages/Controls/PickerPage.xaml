<views:BasePage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.PickerPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Picker">
    <views:BasePage.Content>
        <VerticalStackLayout
            Margin="12">
            <Label
                Text="Basic"
                Style="{StaticResource Headline}"/>
            <Picker 
                Title="Select an item">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                        <x:String>Item 4</x:String>
                        <x:String>Item 5</x:String>
                        <x:String>Item 6</x:String>
                        <x:String>Item 7</x:String>
                        <x:String>Item 8</x:String>
                        <x:String>Item 9</x:String>
                        <x:String>Item 10</x:String>
                        <x:String>Item 11</x:String>
                        <x:String>Item 12</x:String>
                        <x:String>Item 13</x:String>
                        <x:String>Item 14</x:String>
                        <x:String>Item 15</x:String>
                        <x:String>Item 16</x:String>
                        <x:String>Item 17</x:String>
                        <x:String>Item 18</x:String>
                        <x:String>Item 19</x:String>
                        <x:String>Item 20</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label
                Text="SelectedIndex"
                Style="{StaticResource Headline}"/>
            <Picker 
                SelectedIndex="1">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label
                Text="SelectedIndexChanged"
                Style="{StaticResource Headline}"/>
            <Picker 
                Title="Select an item"
                SelectedIndex="1"
                SelectedIndexChanged="OnSelectedIndexChanged">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label
                Text="TextColor"
                Style="{StaticResource Headline}"/>
            <Picker TextColor="Blue"
                Title="Select an item">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label
                Text="HorizontalTextAlignment"
                Style="{StaticResource Headline}"/>
            <Picker HorizontalTextAlignment="End"
                Title="Select an item">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Label
                Text="VerticalTextAlignment"
                Style="{StaticResource Headline}"/>
            <Picker VerticalTextAlignment="Center" HeightRequest="100"
                Title="Select an item">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Item 1</x:String>
                        <x:String>Item 2</x:String>
                        <x:String>Item 3</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>