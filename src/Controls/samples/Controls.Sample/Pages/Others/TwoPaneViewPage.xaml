<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.TwoPaneViewPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    xmlns:foldable="clr-namespace:Microsoft.Maui.Controls.DualScreen;assembly=Microsoft.Maui.Controls.DualScreen"
    Title="TwoPaneView">
    <views:BasePage.Content>
        <foldable:TwoPaneView x:Name="twoPaneView"
                              TallModeConfiguration="TopBottom"
                              WideModeConfiguration="LeftRight"
                              MinWideModeWidth="400"
                              MinTallModeHeight="600">
            <foldable:TwoPaneView.Pane1>
                <StackLayout BackgroundColor="DarkGray"
                             Orientation="Vertical"
                             VerticalOptions="StartAndExpand">
                    <Label Text="Hinge" x:Name="hingeLabel"/>
                    <Label Text="One"/>
                    <Label Text="One point five... "/>
                    <Label Text="Two"/>
                </StackLayout>
            </foldable:TwoPaneView.Pane1>
            <foldable:TwoPaneView.Pane2>
                <StackLayout BackgroundColor="DarkGreen">
                    <Label Text="Three"/>
                </StackLayout>
            </foldable:TwoPaneView.Pane2>
        </foldable:TwoPaneView>
    </views:BasePage.Content>
</views:BasePage>