<Project>

  <ItemGroup>
    <PackageReference ExcludeAssets="All" Include="System.Maui" Version="$(XamarinFormsVersion)">
    </PackageReference>
    <ProjectReference Include="$(XamarinFormsSource)System.Maui.Core\System.Maui.Core.csproj">
      <Name>System.Maui.Core</Name>
    </ProjectReference>
    <ProjectReference Include="$(XamarinFormsSource)System.Maui.Xaml\System.Maui.Xaml.csproj" >
      <Name>System.Maui.Xaml</Name>
    </ProjectReference>
    <ProjectReference  Include="$(XamarinFormsSource)System.Maui.Build.Tasks\System.Maui.Build.Tasks.csproj" >
      <Name>System.Maui.Build.Tasks</Name>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>
  <Import Project="Android.Build.targets" Condition=" $(TargetFrameworkIdentifier.StartsWith('MonoAndroid'))" />
  <Import Project="iOS.Build.targets" Condition=" $(TargetFrameworkIdentifier.StartsWith('Xamarin.iOS'))" />
  <Import Project="Mac.Build.targets" Condition=" $(TargetFrameworkIdentifier.StartsWith('Xamarin.Mac'))" /> 
  <Import Project="UWP.Build.targets" Condition=" '$(TargetPlatformIdentifier)' == 'UAP'" />
  <Import Project="WPF.Build.targets" Condition="'$(UseWPF)' == 'true' AND '$(OS)' == 'Windows_NT'" />
  <Import Project="Netstandard.Build.targets" Condition=" $(TargetFramework.StartsWith('netstandard'))" />
</Project>
